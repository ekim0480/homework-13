<div class="container">
  <div class="row">
    <div class="col" id="undevoured">
      <h3>Yet to be conquered</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col" id="devoured">
      <h3>Burgers conquered</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <h3>Add a Burger that needs to be conquered</h3>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="newBurger" name="name">
    </div>
    <button type="submit" class="btn btn-primary" id="submit">Submit</button>
  </form>
</div>